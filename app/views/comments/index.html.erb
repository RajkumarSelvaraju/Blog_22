<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.comment_text %></td>
      </tr>      
    <% end %>
  </tbody>
</table>
<br>
<% if can? :create, Comment %>
  <%= link_to 'New Comment', new_post_comment_path(@post) %>
<% end %>
<%= link_to 'Back', root_path %>  